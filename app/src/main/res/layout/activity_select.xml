<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.gab.mobility_final.SelectActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5">

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/background"-->
            <!--android:scaleType="centerCrop"-->
            <!--/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected to"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:paddingStart="10dp"

                android:id="@+id/tv_connection"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0.0.0"
                android:id="@+id/tv_ipAddress"
                android:textSize="25sp"
                android:textColor="#FFF"
                android:paddingStart="10dp"
                />

        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="bottom|right"
           android:layout_marginEnd="5dp"
           >

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="disconnect"
                   android:id="@+id/bt_disconnect"
                   android:layout_margin="5dp"
                   android:backgroundTint="#ff5722"
                   android:textColor="#fff"
                   android:elevation="5dp"

                   />


       </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT PERIPHERAL TYPE"
            android:padding="10dp"
            android:textSize="15sp"

            android:layout_marginTop="20dp"
            android:paddingStart="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginEnd="7dp">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/bt_trackpad"
                    android:backgroundTint="#ff5722"
                    android:src="@drawable/ic_trackpad"
                    android:scaleType="fitCenter"
                    android:elevation="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trackpad"
                    android:gravity="center"
                    android:paddingTop="0dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginEnd="7dp">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/bt_keyboard"
                    android:backgroundTint="#ff5722"
                    android:src="@drawable/ic_keyboard"
                    android:scaleType="fitCenter"
                    android:elevation="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keyboard"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/bt_presenter"
                    android:backgroundTint="#ff5722"
                    android:src="@drawable/ic_slideshow"
                    android:scaleType="fitCenter"
                    android:elevation="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presenter"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>